<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- AI Usage Log List View -->
        <record id="view_cyclsales_vision_ai_usage_log_list" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.usage.log.list</field>
            <field name="model">cyclsales.vision.ai.usage.log</field>
            <field name="arch" type="xml">
                <list string="AI Usage Logs" default_group_by="location_id">
                    <field name="display_name"/>
                    <field name="location_id"/>
                    <field name="request_type"/>
                    <field name="status"/>
                    <field name="ai_service_id"/>
                    <field name="total_tokens"/>
                    <field name="total_cost"/>
                    <field name="processing_duration"/>
                    <field name="create_date"/>
                    <field name="user_id"/>
                </list>
            </field>
        </record>

        <!-- AI Usage Log Form View -->
        <record id="view_cyclsales_vision_ai_usage_log_form" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.usage.log.form</field>
            <field name="model">cyclsales.vision.ai.usage.log</field>
            <field name="arch" type="xml">
                <form string="AI Usage Log">
                    <header>
                        <button name="action_retry_request" string="Retry Request" type="object" class="btn-warning" 
                                invisible="status != 'failed'"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="location_id"/>
                                <field name="company_id"/>
                                <field name="user_id"/>
                                <field name="request_type"/>
                                <field name="ai_service_id"/>
                                <field name="model_type"/>
                            </group>
                            <group string="Request Details">
                                <field name="message_id"/>
                                <field name="contact_id"/>
                                <field name="conversation_id"/>
                                <field name="request_id"/>
                                <field name="api_version"/>
                            </group>
                        </group>
                        <group>
                            <group string="Timing Information">
                                <field name="request_start_time"/>
                                <field name="request_end_time"/>
                                <field name="processing_duration"/>
                                <field name="create_date"/>
                            </group>
                            <group string="Token &amp; Cost Information">
                                <field name="input_tokens"/>
                                <field name="output_tokens"/>
                                <field name="total_tokens"/>
                                <field name="cost_per_1k_tokens"/>
                                <field name="total_cost"/>
                                <field name="prompt_length"/>
                                <field name="response_length"/>
                            </group>
                        </group>
                        <group>
                            <group string="Billing Information">
                                <field name="is_billable"/>
                                <field name="billing_period"/>
                            </group>
                            <group string="Response Information">
                                <field name="response_sentiment"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Response Data" name="response_data">
                                <field name="response_summary"/>
                                <field name="response_keywords"/>
                            </page>
                            <page string="Error Information" name="error_info" invisible="not error_message">
                                <field name="error_message"/>
                                <field name="error_code"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AI Usage Log Search View -->
        <record id="view_cyclsales_vision_ai_usage_log_search" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.usage.log.search</field>
            <field name="model">cyclsales.vision.ai.usage.log</field>
            <field name="arch" type="xml">
                <search string="AI Usage Logs">
                    <field name="location_id"/>
                    <field name="request_type"/>
                    <field name="status"/>
                    <field name="ai_service_id"/>
                    <field name="user_id"/>
                    <field name="message_id"/>
                    <field name="contact_id"/>
                    
                    <filter string="Successful" name="success" domain="[('status', '=', 'success')]"/>
                    <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]"/>
                    <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                    <filter string="Billable" name="billable" domain="[('is_billable', '=', True)]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                        <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                        <filter string="Request Type" name="group_request_type" context="{'group_by': 'request_type'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'create_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AI Usage Log Action -->
        <record id="action_cyclsales_vision_ai_usage_log" model="ir.actions.act_window">
            <field name="name">AI Usage Logs</field>
            <field name="res_model">cyclsales.vision.ai.usage.log</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_cyclsales_vision_ai_usage_log_search"/>
            <field name="context">{'search_default_group_location': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No AI usage logs found!
                </p>
                <p>
                    AI usage logs will be automatically created when AI services are used.
                    They help track usage, costs, and performance for billing purposes.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_workflow_ai_usage_logs"
                  name="AI Usage Logs"
                  parent="menu_workflow_root"
                  action="action_cyclsales_vision_ai_usage_log"
                  sequence="3"/>
    </data>
</odoo> 