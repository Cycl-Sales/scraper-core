<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- AI Service list View -->
        <record id="view_cyclsales_vision_ai_list" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.list</field>
            <field name="model">cyclsales.vision.ai</field>
            <field name="arch" type="xml">
                <list string="AI Services">
                    <field name="name"/>
                    <field name="model_type"/>
                    <field name="status"/>
                    <field name="is_active"/>
                    <field name="usage_count"/>
                    <field name="error_count"/>
                    <field name="last_used"/>
                </list>
            </field>
        </record>

        <!-- AI Service Form View -->
        <record id="view_cyclsales_vision_ai_form" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.form</field>
            <field name="model">cyclsales.vision.ai</field>
            <field name="arch" type="xml">
                <form string="AI Service">
                    <header>
                        <button name="test_connection" string="Test Connection" type="object" class="btn-primary"/>
                        <button name="reset_error_count" string="Reset Errors" type="object" class="btn-secondary"/>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="AI Service Name"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Configuration">
                                <field name="model_type"/>
                                <field name="api_key" password="True"/>
                                <field name="base_url"/>
                                <field name="is_active"/>
                            </group>
                            <group string="Parameters">
                                <field name="max_tokens"/>
                                <field name="temperature"/>
                            </group>
                        </group>
                        <group>
                            <group string="Statistics">
                                <field name="usage_count"/>
                                <field name="error_count"/>
                                <field name="last_used"/>
                                <field name="last_error"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Prompt Template">
                                <field name="default_prompt_template" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AI Service Search View -->
        <record id="view_cyclsales_vision_ai_search" model="ir.ui.view">
            <field name="name">cyclsales.vision.ai.search</field>
            <field name="model">cyclsales.vision.ai</field>
            <field name="arch" type="xml">
                <search string="AI Services">
                    <field name="name"/>
                    <field name="model_type"/>
                    <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                    <filter string="Error Status" name="error" domain="[('status', '=', 'error')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Model Type" name="model_type" context="{'group_by': 'model_type'}"/>
                        <filter string="Status" name="status" context="{'group_by': 'status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- AI Service Action -->
        <record id="action_cyclsales_vision_ai" model="ir.actions.act_window">
            <field name="name">AI Services</field>
            <field name="res_model">cyclsales.vision.ai</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_cyclsales_vision_ai_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first AI service!
                </p>
                <p>
                    Configure AI services for call summary generation and other AI-powered features.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_workflow_ai_services"
                  name="AI Services"
                  parent="menu_workflow_root"
                  action="action_cyclsales_vision_ai"
                  sequence="2"/>
    </data>
</odoo> 