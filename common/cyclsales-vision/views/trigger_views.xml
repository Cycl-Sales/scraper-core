<odoo>
    <record id="view_cyclsales_vision_trigger_list" model="ir.ui.view">
        <field name="name">cyclsales.vision.trigger.list</field>
        <field name="model">cyclsales.vision.trigger</field>
        <field name="arch" type="xml">
            <list>
                <field name="external_id"/>
                <field name="key"/>
                <field name="event_type"/>
                <field name="status" widget="badge" decoration-success="status == 'active'" decoration-warning="status == 'processing'" decoration-danger="status == 'error'"/>
                <field name="location_id"/>
                <field name="workflow_id"/>
                <field name="company_id"/>
                <field name="trigger_count"/>
                <field name="last_triggered"/>
                <field name="meta_key"/>
                <field name="meta_version"/>
                <field name="target_url"/>
            </list>
        </field>
    </record>

    <record id="view_cyclsales_vision_trigger_form" model="ir.ui.view">
        <field name="name">cyclsales.vision.trigger.form</field>
        <field name="model">cyclsales.vision.trigger</field>
        <field name="arch" type="xml">
            <form string="Trigger">
                <header>
                    <button name="execute_workflow_from_ui" type="object" string="Execute Workflow" 
                            class="btn-primary" 
                            invisible="status != 'active'"/>
                    <field name="status" widget="statusbar" statusbar_visible="active,processing,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="key" placeholder="Trigger Key"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="external_id"/>
                            <field name="event_type"/>
                            <field name="location_id"/>
                            <field name="target_url"/>
                        </group>
                        <group string="Workflow Information">
                            <field name="workflow_id"/>
                            <field name="company_id"/>
                            <field name="meta_key"/>
                            <field name="meta_version"/>
                        </group>
                    </group>
                    <group>
                        <group string="Status Information">
                            <field name="trigger_count"/>
                            <field name="last_triggered"/>
                            <field name="error_message" invisible="not error_message"/>
                        </group>
                        <group string="Configuration">
                            <field name="filters" widget="text" invisible="not filters"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Workflow Execution History" name="execution_history">
                            <field name="trigger_count" readonly="1"/>
                            <field name="last_triggered" readonly="1"/>
                            <field name="error_message" readonly="1" invisible="not error_message"/>
                        </page>
                        <page string="Configuration" name="configuration">
                            <field name="filters" widget="text" invisible="not filters"/>
                            <field name="target_url"/>
                            <field name="workflow_id"/>
                            <field name="company_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cyclsales_vision_trigger_search" model="ir.ui.view">
        <field name="name">cyclsales.vision.trigger.search</field>
        <field name="model">cyclsales.vision.trigger</field>
        <field name="arch" type="xml">
            <search>
                <field name="external_id"/>
                <field name="key"/>
                <field name="event_type"/>
                <field name="location_id"/>
                <field name="workflow_id"/>
                <field name="company_id"/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Processing" name="processing" domain="[('status', '=', 'processing')]"/>
                <filter string="Error" name="error" domain="[('status', '=', 'error')]"/>
                <filter string="Call Triggers" name="call_triggers" domain="[('event_type', '=', 'CALL')]"/>
                <filter string="Contact Triggers" name="contact_triggers" domain="[('event_type', '=', 'CONTACT_CREATED')]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Event Type" name="group_event_type" context="{'group_by': 'event_type'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Trigger Key" name="group_key" context="{'group_by': 'key'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_cyclsales_vision_trigger" model="ir.actions.act_window">
        <field name="name">Triggers</field>
        <field name="res_model">cyclsales.vision.trigger</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_cyclsales_vision_trigger_search"/>
        <field name="context">{'search_default_active': 1}</field>
    </record>

    <!-- Main menu: WorkFlow (beside Automations) -->
    <menuitem id="menu_workflow_root" name="WorkFlow" parent="web_scraper.menu_advanced_dashboard" sequence="2"/>
    <!-- Submenu: Triggers -->
    <menuitem id="menu_workflow_triggers" name="Triggers" parent="menu_workflow_root" action="action_cyclsales_vision_trigger" sequence="1"/>
</odoo> 