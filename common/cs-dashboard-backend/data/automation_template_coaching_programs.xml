<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Template -->
    <record id="automation_template_coaching_programs" model="automation.template">
        <field name="name">Default - Coaching Programs</field>
        <field name="is_default">True</field>
        <field name="business_context">This business provides coaching and mentorship programs. The focus is on client progress, accountability, and delivering measurable results through structured sessions and follow-ups.</field>
    </record>
    <!-- Call Transcript Settings -->
    <record id="call_transcript_setting_cp" model="automation.call.transcript.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="add_user_data">True</field>
        <field name="update_contact_name">True</field>
        <field name="improve_speaker_accuracy">True</field>
        <field name="improve_word_accuracy">True</field>
        <field name="assign_speaker_labels">True</field>
        <field name="save_full_transcript">True</field>
        <field name="save_transcript_url">True</field>
    </record>
    <!-- Call Summary Settings -->
    <record id="call_summary_setting_cp" model="automation.call.summary.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="add_url_to_note">True</field>
        <field name="update_summary_field">True</field>
        <field name="create_contact_note">True</field>
    </record>
    <!-- Extract Details -->
    <record id="extract_detail_1_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What is the client’s main goal for the coaching program?</field>
    </record>
    <record id="extract_detail_2_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What challenges or obstacles are they facing?</field>
    </record>
    <record id="extract_detail_3_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What progress have they made since the last session?</field>
    </record>
    <record id="extract_detail_4_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What action items were agreed upon?</field>
    </record>
    <record id="extract_detail_5_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What is the client’s level of motivation (1–10)?</field>
    </record>
    <record id="extract_detail_6_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">Are there any upcoming deadlines or milestones?</field>
    </record>
    <record id="extract_detail_7_cp" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cp"/>
        <field name="question">What feedback or questions does the client have?</field>
    </record>
    <!-- AI Sales Scoring -->
    <record id="ai_sales_scoring_setting_cp" model="automation.ai.sales.scoring.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="framework">COACHING SALES FRAMEWORK</field>
    </record>
    <record id="sales_rule_1_cp" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cp"/>
        <field name="rule_text">Did the coach establish rapport and clarify the client’s goals?</field>
    </record>
    <record id="sales_rule_2_cp" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cp"/>
        <field name="rule_text">Was the client’s progress and obstacles discussed in detail?</field>
    </record>
    <record id="sales_rule_3_cp" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cp"/>
        <field name="rule_text">Did the coach provide actionable feedback and next steps?</field>
    </record>
    <record id="sales_rule_4_cp" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cp"/>
        <field name="rule_text">Did the coach handle objections or doubts with empathy?</field>
    </record>
    <record id="sales_rule_5_cp" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cp"/>
        <field name="rule_text">Did the coach set clear accountability and follow-up?</field>
    </record>
    <!-- Run Contact Automations -->
    <record id="run_contact_automations_setting_cp" model="automation.run.contact.automations.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="disable_for_tag">True</field>
        <field name="after_inactivity">True</field>
        <field name="inactivity_hours">10</field>
        <field name="after_min_duration">True</field>
        <field name="min_duration_seconds">20</field>
        <field name="after_message_count">True</field>
        <field name="message_count">2</field>
    </record>
    <!-- Contact Status -->
    <record id="contact_status_setting_cp" model="automation.contact.status.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="add_status_tag">True</field>
        <field name="update_status_field">True</field>
    </record>
    <record id="status_option_1_cp" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cp"/>
        <field name="name">Active Client</field>
        <field name="description">The client is actively participating in the coaching program.</field>
        <field name="icon">user-check</field>
        <field name="color">sky</field>
    </record>
    <record id="status_option_2_cp" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cp"/>
        <field name="name">Progressing</field>
        <field name="description">The client is making progress and completing action items.</field>
        <field name="icon">badge-check</field>
        <field name="color">green</field>
    </record>
    <record id="status_option_3_cp" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cp"/>
        <field name="name">Needs Follow-up</field>
        <field name="description">The client has missed sessions or needs additional support.</field>
        <field name="icon">scroll</field>
        <field name="color">blue</field>
    </record>
    <record id="status_option_4_cp" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cp"/>
        <field name="name">Disengaged</field>
        <field name="description">The client is not responding or has dropped out of the program.</field>
        <field name="icon">ban</field>
        <field name="color">rose</field>
    </record>
    <!-- AI Contact Scoring -->
    <record id="ai_contact_scoring_setting_cp" model="automation.ai.contact.scoring.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="use_notes_for_context">True</field>
        <field name="update_score_field">True</field>
        <field name="add_score_tag">False</field>
        <field name="examples_rules">A-grade: Client is highly engaged, completes all action items, and attends every session. B-grade: Client is engaged but occasionally misses tasks. C-grade: Client is inconsistent. D-grade: Client is disengaged. F-grade: Client has dropped out.</field>
    </record>
    <!-- Full Contact Summary -->
    <record id="full_contact_summary_setting_cp" model="automation.full.contact.summary.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="use_call_summary_fields">True</field>
        <field name="update_status_summary">True</field>
        <field name="create_summary_note">True</field>
        <field name="delete_old_summary">True</field>
    </record>
    <!-- Contact Value -->
    <record id="contact_value_setting_cp" model="automation.contact.value.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="update_value_field">True</field>
        <field name="use_value_override">True</field>
    </record>
    <record id="contact_value_example_1_cp" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cp"/>
        <field name="example_text">High-ticket client: Value $10,000+.</field>
    </record>
    <record id="contact_value_example_2_cp" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cp"/>
        <field name="example_text">Group program: Value $2,000–$10,000.</field>
    </record>
    <record id="contact_value_example_3_cp" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cp"/>
        <field name="example_text">Single session: Value $500–$2,000.</field>
    </record>
    <record id="contact_value_example_4_cp" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cp"/>
        <field name="example_text">Not engaged: Value $0.</field>
    </record>
    <!-- Task Generation -->
    <record id="task_generation_setting_cp" model="automation.task.generation.setting">
        <field name="template_id" ref="automation_template_coaching_programs"/>
        <field name="enabled">True</field>
        <field name="auto_complete_tasks">True</field>
        <field name="auto_reschedule_tasks">True</field>
    </record>
    <record id="task_rule_1_cp" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cp"/>
        <field name="rule_text">If a client misses a session, create a follow-up task.</field>
    </record>
    <record id="task_rule_2_cp" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cp"/>
        <field name="rule_text">If a client completes a milestone, create a task to celebrate or acknowledge progress.</field>
    </record>
    <record id="task_rule_3_cp" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cp"/>
        <field name="rule_text">If a client is disengaged, create a task to re-engage or close out.</field>
    </record>
    <record id="task_rule_4_cp" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cp"/>
        <field name="rule_text">If a new client is onboarded, create a welcome task.</field>
    </record>
</odoo> 