<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Template -->
    <record id="automation_template_cleaning_companies" model="automation.template">
        <field name="name">Default - Cleaning Companies</field>
        <field name="is_default">True</field>
        <field name="business_context">This company provides residential and commercial cleaning services. The focus is on client satisfaction, reliability, and maintaining high standards of cleanliness and professionalism.</field>
    </record>
    <!-- Call Transcript Settings -->
    <record id="call_transcript_setting_cc" model="automation.call.transcript.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="add_user_data">True</field>
        <field name="update_contact_name">True</field>
        <field name="improve_speaker_accuracy">True</field>
        <field name="improve_word_accuracy">True</field>
        <field name="assign_speaker_labels">True</field>
        <field name="save_full_transcript">True</field>
        <field name="save_transcript_url">True</field>
    </record>
    <!-- Call Summary Settings -->
    <record id="call_summary_setting_cc" model="automation.call.summary.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="add_url_to_note">True</field>
        <field name="update_summary_field">True</field>
        <field name="create_contact_note">True</field>
    </record>
    <!-- Extract Details -->
    <record id="extract_detail_1_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">What is the client’s name and contact information?</field>
    </record>
    <record id="extract_detail_2_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">What type of cleaning service is required (residential, commercial, deep clean, etc.)?</field>
    </record>
    <record id="extract_detail_3_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">What is the address of the property to be cleaned?</field>
    </record>
    <record id="extract_detail_4_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">What is the preferred date and time for the service?</field>
    </record>
    <record id="extract_detail_5_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">Are there any special instructions or areas of concern?</field>
    </record>
    <record id="extract_detail_6_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">What is the estimated size of the property (sq ft or rooms)?</field>
    </record>
    <record id="extract_detail_7_cc" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_cc"/>
        <field name="question">Is this a one-time or recurring service?</field>
    </record>
    <!-- AI Sales Scoring -->
    <record id="ai_sales_scoring_setting_cc" model="automation.ai.sales.scoring.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="framework">CLEANING SALES FRAMEWORK</field>
    </record>
    <record id="sales_rule_1_cc" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cc"/>
        <field name="rule_text">Did the rep establish rapport and clarify the client’s cleaning needs?</field>
    </record>
    <record id="sales_rule_2_cc" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cc"/>
        <field name="rule_text">Was the property size and type of service clearly documented?</field>
    </record>
    <record id="sales_rule_3_cc" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cc"/>
        <field name="rule_text">Did the rep avoid overpromising and set realistic expectations?</field>
    </record>
    <record id="sales_rule_4_cc" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cc"/>
        <field name="rule_text">Did the rep handle objections or special requests professionally?</field>
    </record>
    <record id="sales_rule_5_cc" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_cc"/>
        <field name="rule_text">Did the rep confirm the next appointment and follow up?</field>
    </record>
    <!-- Run Contact Automations -->
    <record id="run_contact_automations_setting_cc" model="automation.run.contact.automations.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="disable_for_tag">True</field>
        <field name="after_inactivity">True</field>
        <field name="inactivity_hours">10</field>
        <field name="after_min_duration">True</field>
        <field name="min_duration_seconds">20</field>
        <field name="after_message_count">True</field>
        <field name="message_count">2</field>
    </record>
    <!-- Contact Status -->
    <record id="contact_status_setting_cc" model="automation.contact.status.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="add_status_tag">True</field>
        <field name="update_status_field">True</field>
    </record>
    <record id="status_option_1_cc" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cc"/>
        <field name="name">New Client</field>
        <field name="description">The client has requested a cleaning service and provided details.</field>
        <field name="icon">user-check</field>
        <field name="color">sky</field>
    </record>
    <record id="status_option_2_cc" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cc"/>
        <field name="name">Scheduled</field>
        <field name="description">The cleaning appointment is scheduled.</field>
        <field name="icon">badge-check</field>
        <field name="color">green</field>
    </record>
    <record id="status_option_3_cc" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cc"/>
        <field name="name">In Progress</field>
        <field name="description">The cleaning is currently in progress.</field>
        <field name="icon">scroll</field>
        <field name="color">blue</field>
    </record>
    <record id="status_option_4_cc" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cc"/>
        <field name="name">Completed</field>
        <field name="description">The cleaning has been completed successfully.</field>
        <field name="icon">badge-check</field>
        <field name="color">green</field>
    </record>
    <record id="status_option_5_cc" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_cc"/>
        <field name="name">Disqualified – Not Interested</field>
        <field name="description">The client is not interested or cancelled the service.</field>
        <field name="icon">ban</field>
        <field name="color">rose</field>
    </record>
    <!-- AI Contact Scoring -->
    <record id="ai_contact_scoring_setting_cc" model="automation.ai.contact.scoring.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="use_notes_for_context">True</field>
        <field name="update_score_field">True</field>
        <field name="add_score_tag">False</field>
        <field name="examples_rules">A-grade: Client is responsive, provides clear instructions, and pays on time. B-grade: Client is generally reliable but has minor issues. C-grade: Client is inconsistent. D-grade: Client is difficult or has major complaints. F-grade: Client cancels or is not a fit.</field>
    </record>
    <!-- Full Contact Summary -->
    <record id="full_contact_summary_setting_cc" model="automation.full.contact.summary.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="use_call_summary_fields">True</field>
        <field name="update_status_summary">True</field>
        <field name="create_summary_note">True</field>
        <field name="delete_old_summary">True</field>
    </record>
    <!-- Contact Value -->
    <record id="contact_value_setting_cc" model="automation.contact.value.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="update_value_field">True</field>
        <field name="use_value_override">True</field>
    </record>
    <record id="contact_value_example_1_cc" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cc"/>
        <field name="example_text">Large commercial client: Value $10,000+.</field>
    </record>
    <record id="contact_value_example_2_cc" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cc"/>
        <field name="example_text">Recurring residential: Value $2,000–$10,000.</field>
    </record>
    <record id="contact_value_example_3_cc" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cc"/>
        <field name="example_text">One-time clean: Value $500–$2,000.</field>
    </record>
    <record id="contact_value_example_4_cc" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_cc"/>
        <field name="example_text">Not interested: Value $0.</field>
    </record>
    <!-- Task Generation -->
    <record id="task_generation_setting_cc" model="automation.task.generation.setting">
        <field name="template_id" ref="automation_template_cleaning_companies"/>
        <field name="enabled">True</field>
        <field name="auto_complete_tasks">True</field>
        <field name="auto_reschedule_tasks">True</field>
    </record>
    <record id="task_rule_1_cc" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cc"/>
        <field name="rule_text">If a new client is onboarded, schedule a cleaning within 48 hours.</field>
    </record>
    <record id="task_rule_2_cc" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cc"/>
        <field name="rule_text">If a cleaning is scheduled, create a reminder task for the day before.</field>
    </record>
    <record id="task_rule_3_cc" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cc"/>
        <field name="rule_text">If a cleaning is completed, create a follow-up task for feedback.</field>
    </record>
    <record id="task_rule_4_cc" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_cc"/>
        <field name="rule_text">If the client cancels, create a task to mark as disqualified.</field>
    </record>
</odoo> 