<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Main Template -->
    <record id="automation_template_business_acquisition" model="automation.template">
        <field name="name">Default - Business Acquisition</field>
        <field name="is_default">True</field>
        <field name="business_context">This company specializes in acquiring small to medium-sized businesses. The focus is on evaluating business health, negotiating fair terms, and ensuring smooth transitions for both parties.</field>
    </record>
    
    <!-- Call Transcript Settings -->
    <record id="call_transcript_setting_ba" model="automation.call.transcript.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="add_user_data">True</field>
        <field name="update_contact_name">True</field>
        <field name="improve_speaker_accuracy">True</field>
        <field name="improve_word_accuracy">True</field>
        <field name="assign_speaker_labels">True</field>
        <field name="save_full_transcript">True</field>
        <field name="save_transcript_url">True</field>
    </record>

    <!-- Call Summary Settings -->
    <record id="call_summary_setting_ba" model="automation.call.summary.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="add_url_to_note">True</field>
        <field name="update_summary_field">True</field>
        <field name="create_contact_note">True</field>
    </record>

    <!-- Extract Details -->
    <record id="extract_detail_1_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the business name and industry?</field>
    </record>
    <record id="extract_detail_2_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">Who are the current owners and decision-makers?</field>
    </record>
    <record id="extract_detail_3_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the annual revenue and profit margin?</field>
    </record>
    <record id="extract_detail_4_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the reason for selling?</field>
    </record>
    <record id="extract_detail_5_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What are the key assets and liabilities?</field>
    </record>
    <record id="extract_detail_6_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">How many employees and what are their roles?</field>
    </record>
    <record id="extract_detail_7_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the customer base and retention rate?</field>
    </record>
    <record id="extract_detail_8_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">Are there any legal or compliance issues?</field>
    </record>
    <record id="extract_detail_9_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the transition plan for ownership?</field>
    </record>
    <record id="extract_detail_10_ba" model="automation.extract.detail">
        <field name="call_summary_setting_id" ref="call_summary_setting_ba"/>
        <field name="question">What is the timeline for sale and handover?</field>
    </record>

    <!-- AI Sales Scoring -->
    <record id="ai_sales_scoring_setting_ba" model="automation.ai.sales.scoring.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="framework">CONSULTATIVE SALES FRAMEWORK – BUSINESS ACQUISITIONS</field>
    </record>
    <record id="sales_rule_1_ba" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_ba"/>
        <field name="rule_text">Did the rep establish rapport and set a clear structure at the beginning of the call? Look for signs of trust, comfort, and permission to go deep.</field>
    </record>
    <record id="sales_rule_2_ba" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_ba"/>
        <field name="rule_text">Was the due diligence process thorough and multi-layered? The rep should explore financials, operations, and legal aspects using open-ended questions.</field>
    </record>
    <record id="sales_rule_3_ba" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_ba"/>
        <field name="rule_text">Did the rep avoid making an offer too early and instead prescribe a solution based on what the seller shared? Bonus points for using the seller’s exact language.</field>
    </record>
    <record id="sales_rule_4_ba" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_ba"/>
        <field name="rule_text">Did the rep handle objections calmly and explore the underlying reason behind the objection? Look for frameworks like 'feel, felt, found' or genuine curiosity.</field>
    </record>
    <record id="sales_rule_5_ba" model="automation.sales.rule">
        <field name="sales_scoring_setting_id" ref="ai_sales_scoring_setting_ba"/>
        <field name="rule_text">Did the rep clearly define the next step and wrap up with mutual clarity? If not, that’s a breakdown in momentum and ownership of the acquisition process.</field>
    </record>

    <!-- Run Contact Automations -->
    <record id="run_contact_automations_setting_ba" model="automation.run.contact.automations.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="disable_for_tag">True</field>
        <field name="after_inactivity">True</field>
        <field name="inactivity_hours">10</field>
        <field name="after_min_duration">True</field>
        <field name="min_duration_seconds">20</field>
        <field name="after_message_count">True</field>
        <field name="message_count">2</field>
    </record>

    <!-- Contact Status -->
    <record id="contact_status_setting_ba" model="automation.contact.status.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="add_status_tag">True</field>
        <field name="update_status_field">True</field>
    </record>
    <record id="status_option_1_ba" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_ba"/>
        <field name="name">Qualified Lead</field>
        <field name="description">The business owner is interested in selling and has provided key information for evaluation.</field>
        <field name="icon">user-check</field>
        <field name="color">sky</field>
    </record>
    <record id="status_option_2_ba" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_ba"/>
        <field name="name">Due Diligence</field>
        <field name="description">All documents and information are being reviewed. Awaiting further details or clarifications.</field>
        <field name="icon">badge-check</field>
        <field name="color">green</field>
    </record>
    <record id="status_option_3_ba" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_ba"/>
        <field name="name">Offer Sent</field>
        <field name="description">A formal offer has been sent to the business owner. Awaiting response or negotiation.</field>
        <field name="icon">scroll</field>
        <field name="color">blue</field>
    </record>
    <record id="status_option_4_ba" model="automation.status.option">
        <field name="contact_status_setting_id" ref="contact_status_setting_ba"/>
        <field name="name">Disqualified – Not Interested</field>
        <field name="description">The business owner is not interested in selling or does not meet acquisition criteria.</field>
        <field name="icon">ban</field>
        <field name="color">rose</field>
    </record>

    <!-- AI Contact Scoring -->
    <record id="ai_contact_scoring_setting_ba" model="automation.ai.contact.scoring.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="use_notes_for_context">True</field>
        <field name="update_score_field">True</field>
        <field name="add_score_tag">False</field>
        <field name="examples_rules">An A-grade business is fully prepared for sale — all documents are ready, the owner is responsive, and there are no major red flags. B-grade is missing some info or has minor issues. C-grade is slow to respond or has moderate issues. D-grade is uncooperative or has major issues. F-grade is not interested or not a fit.</field>
    </record>

    <!-- Full Contact Summary -->
    <record id="full_contact_summary_setting_ba" model="automation.full.contact.summary.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="use_call_summary_fields">True</field>
        <field name="update_status_summary">True</field>
        <field name="create_summary_note">True</field>
        <field name="delete_old_summary">True</field>
    </record>

    <!-- Contact Value -->
    <record id="contact_value_setting_ba" model="automation.contact.value.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="update_value_field">True</field>
        <field name="use_value_override">True</field>
    </record>
    <record id="contact_value_example_1_ba" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_ba"/>
        <field name="example_text">If the business has $1M+ in annual profit, value at $5M+ (high priority).</field>
    </record>
    <record id="contact_value_example_2_ba" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_ba"/>
        <field name="example_text">If the business has $500k–$1M in profit, value at $2M–$5M.</field>
    </record>
    <record id="contact_value_example_3_ba" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_ba"/>
        <field name="example_text">If the business has $100k–$500k in profit, value at $500k–$2M.</field>
    </record>
    <record id="contact_value_example_4_ba" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_ba"/>
        <field name="example_text">If the business has under $100k in profit, value at $100k–$500k.</field>
    </record>
    <record id="contact_value_example_5_ba" model="automation.contact.value.example">
        <field name="contact_value_setting_id" ref="contact_value_setting_ba"/>
        <field name="example_text">If the business is not profitable or not interested, value at $0.</field>
    </record>

    <!-- Task Generation -->
    <record id="task_generation_setting_ba" model="automation.task.generation.setting">
        <field name="template_id" ref="automation_template_business_acquisition"/>
        <field name="enabled">True</field>
        <field name="auto_complete_tasks">True</field>
        <field name="auto_reschedule_tasks">True</field>
    </record>
    <record id="task_rule_1_ba" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_ba"/>
        <field name="rule_text">If a business owner expresses interest but has not responded in 24 hours, create a follow-up task.</field>
    </record>
    <record id="task_rule_2_ba" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_ba"/>
        <field name="rule_text">If due diligence is pending, create a task to request missing documents or clarifications.</field>
    </record>
    <record id="task_rule_3_ba" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_ba"/>
        <field name="rule_text">If an offer is sent, create a task to follow up within 48 hours.</field>
    </record>
    <record id="task_rule_4_ba" model="automation.task.rule">
        <field name="task_generation_setting_id" ref="task_generation_setting_ba"/>
        <field name="rule_text">If the owner is not interested, create a task to mark as disqualified and archive.</field>
    </record>
</odoo> 