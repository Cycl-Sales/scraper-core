      <field name="name">automation.template.list</field>
      <field name="model">automation.template</field>
      <field name="arch" type="xml">
        <list string="Automation Templates">
          <field name="name"/>
          <field name="location_id" optional="show"/>
          <field name="is_default"/>
        </list>
      </field>
    </record>
