                <field name="full_contact_summary_setting_ids"/>
              </page>
              <page string="Contact Value">
                <field name="contact_value_setting_ids"/>
              </page>
              <page string="Task Generation">
                <field name="task_generation_setting_ids"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
