      <field name="name">automation.template.form</field>
      <field name="model">automation.template</field>
      <field name="arch" type="xml">
        <form string="Automation Template">
          <sheet>
            <group>
              <field name="name"/>
              <field name="location_id" optional="show"/>
              <field name="is_default"/>
              <field name="parent_template_id"/>
              <field name="business_context"/>
            </group>
            <notebook>
              <page string="Call Transcript Settings">
                <field name="call_transcript_setting_ids"/>
              </page>
              <page string="Call Summary Settings">
                <field name="call_summary_setting_ids"/>
              </page>
              <page string="AI Sales Scoring">
