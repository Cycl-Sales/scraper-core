<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="ghl_install_success">
        <t t-call="web.layout">
            <div class="container mt-4">
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">Success!</h4>
                    <p t-esc="message"/>
                    <hr/>
                    <p class="mb-0">You can now close this window and return to GHL.</p>
                </div>
            </div>
        </t>
    </template>

    <template id="ghl_install_error">
        <t t-call="web.layout">
            <div class="container mt-4">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Error!</h4>
                    <p t-esc="error"/>
                    <hr/>
                    <p class="mb-0">Please try installing the app again or contact support if the problem persists.</p>
                </div>
            </div>
        </t>
    </template>
</odoo> 