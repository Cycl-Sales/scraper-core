# Application
APP_NAME=CyclSales Dashboard API
DEBUG=True
ENVIRONMENT=development
API_V1_PREFIX=/api/v1
SECRET_KEY=your-secret-key-change-this-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cyclsales_db

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# GHL OAuth
GHL_CLIENT_ID=your-ghl-client-id
GHL_CLIENT_SECRET=your-ghl-client-secret
GHL_APP_ID=your-ghl-app-id
GHL_REDIRECT_URI=http://localhost:8000/api/v1/oauth/callback

# GHL API
GHL_API_BASE_URL=https://services.leadconnectorhq.com
GHL_API_VERSION=2021-07-28

# Frontend URL (for redirects after OAuth)
FRONTEND_URL=http://localhost:3000

# OpenAI (for AI features)
OPENAI_API_KEY=your-openai-api-key

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO

# Workers
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
ALLOWED_HOSTS=["*"]
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_PER_MINUTE=100
GHL_WEBHOOK_SECRET=your-webhook-secret-if-enabled
